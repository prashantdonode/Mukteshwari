@model IEnumerable<GurupithWebApi.Entity.personal_information>

@{
    ViewBag.Title = "SearchInfo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>SearchInfo</h2>

@using (Html.BeginForm("SearchInfo", "Dashboard", FormMethod.Get))
{
    //the following are search options
    
    @*<b> Search Option: </b>@Html.RadioButton("option", "Name") <text>Name</text> @Html.RadioButton("option", "City") <text> City </text>
    @Html.RadioButton("option", "Subjects")<text>Subject</text> @Html.TextBox("search") <input type = "submit" name = "submit" value = "Search" />*@
    <div class="container psd-margin-top">
        <div class="row">
            <div class="col-md-3">
                <b> Search Option:</b> @Html.TextBox("search", null, new { @class = "form-control" })
            </div>
            <div class="col-md-4 psd-margin-topp">
                <input type="submit" name="submit" value="Search" class="btn btn-success" />
            </div>

        </div>

    </div>
}

<div class="container psd-margin-top">
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.sadhakid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nameofperson)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.addressofcorrespondance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.city)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.districy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.state)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.mobileno)
                </th>

                <th></th>
            </tr>


            @if (Model.Count() == 0)
{
                <tr> <td colspan="9"> Records not found...! </td></tr>
}
else
{
    foreach (var item in Model)
    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.sadhakid)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nameofperson)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.addressofcorrespondance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.city)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.districy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.state)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.country)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.mobileno)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Pid }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Pid }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Pid })
                        </td>
                    </tr>
    }
}

        </table>
    </div>
</div>